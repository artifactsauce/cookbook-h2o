#! /bin/sh
# vim:ft=sh:et
### BEGIN INIT INFO
# Provides:          h2o
# Required-Start:    $remote_fs $local_fs $syslog
# Required-Stop:
# Default-Start:     2 3 4 5
# Default-Stop:
# Short-Description: Start/stop h2o
# Description:       HTTP/2 daemon
### END INIT INFO

PATH=/usr/local/sbin:/usr/local/bin:/sbin:/bin:/usr/sbin:/usr/bin
DAEMON=<%= @binary_path %>
NAME=h2o
DESC="HTTP/2 daemon"

test -x "$DAEMON" || exit 0
umask 022

CONFIG_FILE=<%= @configuration_path %>
PIDFILE=<%= @pid_path %>

set -e
status=0

. /lib/lsb/init-functions

daemon_start() {
    $DAEMON -m daemon -c $CONFIG_FILE || status=$?
}

daemon_stop() {
    kill -TERM $(cat $PIDFILE) || status=$?
}

case "$1" in
    start)
        log_daemon_msg "Starting $DESC" "$NAME"
        daemon_start
        log_end_msg $status
        ;;
    stop)
        log_daemon_msg "Stoping $DESC" "$NAME"
        daemon_stop
        ;;
    restart)
        log_daemon_msg "Restarting $DESC" "$NAME"
        daemon_stop
        daemon_start
        log_end_msg $status
        ;;
    *)
        log_failure_msg "Usage: $0 {start|stop|restart}"
        exit 1
        ;;
esac

exit $status
